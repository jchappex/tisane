<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %><br>
    <%= f.input :password, required: false %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<div class="deport_form">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.present? %>
      <%= devise_error_messages! %>
    <% end %>
  
    <div class="form-inputs">
      <%= f.label :email %><br>
      <div class="field">
        <%= f.email_field :email, required: true, autofocus: true %>
      </div>
      <%= f.label :'Mot de passe' %><br>
      <div class="field">
        <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} caractÃ¨re(s) minimum" if @minimum_password_length) %>
      </div>
      <%= f.label :'Confirmation du mot de passe' %><br>
      <div class="field">
        <%= f.password_field :password_confirmation, required: true %>
      </div>
    </div>
  
    <div class="actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>