<div class="deport_form">
  <h2>Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if resource.errors.present? %>
      <%= devise_error_messages! %>
    <% end %>
  
    <div class="form-inputs">
      <%= f.label :email %><br>
      <div class="field">
        <%= f.email_field :email, required: true, autofocus: true %>
      </div>
      <%= f.label :'Mot de passe' %><br>
      <div class="field">
        <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} caractÃ¨re(s) minimum" if @minimum_password_length) %>
      </div>
      <%= f.label :'Confirmation du mot de passe' %><br>
      <div class="field">
        <%= f.password_field :password_confirmation, required: true %>
      </div>
    </div>
  
    <div class="actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>